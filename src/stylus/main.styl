/** Stylus Styles */
@import '../../node_modules/vuetify/src/stylus/main'

//  variables
$primary = #F5BA13


// styles

.container
  padding 0

.application--light .navigation-drawer
  background-color: $primary

.application--light .toolbar
  background-color: $primary

.application > main
  flex-direction: column

a
  text-decoration: none

.backgroundText
  min-height 40px
  display flex
  align-items center
  padding 1rem
  background-color #E8E7E7
  box-shadow 0px 0px 5px 5px #E8E7E7
  span
    font-size: 2rem

.form
  background-color #F1B415 !important
  border-radius 6px
  padding 1.5rem 2rem

.myBtn
  background-color red !important
  color #fff !important
  text-shadow 1px 1px 1px #333